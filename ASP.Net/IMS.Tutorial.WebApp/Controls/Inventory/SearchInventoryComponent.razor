
<div class="input-group">
    <input type="text" class="form-control" 
        placeholder="Type item name here to search."
    @bind-value="itemNameToFind" />
    <button type="button" class="btn-success input-group-text"
        @onclick="OnSearch">Search</button>  
</div>

@code {
private string itemNameToFind = string.Empty;

[Parameter]
public EventCallback<string> OnSearchInventory { get; set; }

private void OnSearch()
{

    OnSearchInventory.InvokeAsync(itemNameToFind);
}
}
